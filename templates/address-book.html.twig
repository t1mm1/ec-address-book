{#
/**
 * @file
 * Default theme implementation for EC address book.
 *
 * Available variables:
 * - addresses: Array of address data
 * - add_url: URL to add new address
 */
#}

<div class="flex justify-between items-center mb-6">
  <a href="{{ add_url }}" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-900 text-white font-medium rounded-lg transition duration-150">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    {{ 'Add Address'|t }}
  </a>
</div>

{% if addresses %}
  {# Desktop Table #}
  <div class="hidden lg:block overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 bg-white shadow-sm rounded-lg overflow-hidden mb-4">
      <thead class="bg-gray-50">
        <tr class="text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
          <th class="px-6 py-4">{{ 'Name'|t }}</th>
          <th class="px-6 py-4">{{ 'Address'|t }}</th>
          <th class="px-6 py-4">{{ 'City / Region'|t }}</th>
          <th class="px-6 py-4">{{ 'Postal Code'|t }}</th>
          <th class="px-6 py-4">{{ 'Actions'|t }}</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      {% for address in addresses %}
        <tr class="hover:bg-gray-50 transition-colors {{ address.is_default ? 'bg-blue-50' : '' }}">
          <td class="px-6 py-4 text-sm text-gray-900">
            <div class="text-sm font-medium text-gray-900">
              {{ address.given_name }} {{ address.family_name }}
              {% if address.is_default %}
                <span class="ml-2 px-2 py-1 text-xs font-semibold text-blue-600 bg-blue-100 rounded-full">{{ 'Default'|t }}</span>
              {% endif %}
            </div>
            {% if address.organization %}
              <div class="text-sm text-gray-600">{{ address.organization }}</div>
            {% endif %}
          </td>
          <td class="px-6 py-4 text-sm text-gray-600">
            <div class="text-sm text-gray-600">{{ address.address_line1 }}</div>
            {% if address.address_line2 %}
              <div class="text-sm text-gray-600">{{ address.address_line2 }}</div>
            {% endif %}
          </td>
          <td class="px-6 py-4 text-sm text-gray-600">
            <div class="text-sm text-gray-600">{{ address.locality }}</div>
            {% if address.administrative_area %}
              <div class="text-sm text-gray-600">{{ address.administrative_area }}</div>
            {% endif %}
          </td>
          <td class="px-6 py-4 text-sm text-gray-600">
            {{ address.postal_code }}
          </td>
          <td class="px-6 py-4 text-sm text-gray-600">
            <div class="flex justify-start gap-3">
              <a href="{{ address.edit_url }}" class="text-blue-600 hover:text-blue-900 transition-colors">{{ 'Edit'|t }}</a>
              {% if not address.is_default %}
                <a href="{{ address.delete_url }}" class="text-red-600 hover:text-red-900 transition-colors">{{ 'Delete'|t }}</a>
                {% if address.set_default_url %}
                  <a href="{{ address.set_default_url }}" class="text-green-600 hover:text-green-900 transition-colors">{{ 'Set Default'|t }}</a>
                {% endif %}
              {% endif %}
            </div>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

  {# Mobile Cards #}
  <div class="lg:hidden grid gap-4">
    {% for address in addresses %}
      <div class="bg-white rounded-lg shadow-md p-4 mb-44 {{ address.is_default ? 'border-2 border-blue-600' : 'border border-gray-200' }}">
        <div class="flex justify-between items-start mb-3">
          <h3 class="text-lg font-semibold text-gray-600">
            {{ address.given_name }} {{ address.family_name }}
          </h3>
          {% if address.is_default %}
            <span class="px-2 py-1 text-xs font-semibold text-blue-600 bg-blue-100 rounded-full">{{ 'Default'|t }}</span>
          {% endif %}
        </div>

        {% if address.organization %}
          <p class="text-sm text-gray-600 mb-2">{{ address.organization }}</p>
        {% endif %}

        <div class="text-sm text-gray-600 space-y-1 mb-4">
          <p>{{ address.address_line1 }}</p>
          {% if address.address_line2 %}
            <p>{{ address.address_line2 }}</p>
          {% endif %}
          <p>{{ address.locality }}{% if address.administrative_area %}, {{ address.administrative_area }}{% endif %}</p>
          <p>{{ address.postal_code }}, {{ address.country_code }}</p>
        </div>

        <div class="flex flex-col space-y-2 pt-3 border-t border-gray-200">
          <a href="{{ address.edit_url }}" class="text-center px-4 py-2 bg-blue-100 text-blue-600 rounded-md hover:bg-blue-200 transition duration-150">
            {{ 'Edit'|t }}
          </a>
          {% if not address.is_default %}
            <div class="flex space-x-2">
              <a href="{{ address.delete_url }}" class="flex-1 text-center px-4 py-2 bg-red-100 text-red-600 rounded-md hover:bg-red-200 transition duration-150">
                {{ 'Delete'|t }}
              </a>
              {% if address.set_default_url %}
                <a href="{{ address.set_default_url }}" class="flex-1 text-center px-4 py-2 bg-green-100 text-green-600 rounded-md hover:bg-green-200 transition duration-150">
                  {{ 'Set Default'|t }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
{% else %}
  <div class="text-center py-12 bg-gray-50 rounded-lg">
    <svg class="mx-auto h-12 w-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-600">{{ 'No addresses'|t }}</h3>
    <p class="mt-1 text-sm text-gray-600">{{ 'Get started by adding a new address.'|t }}</p>
  </div>
{% endif %}
